	<insert id="insert">
		INSERT INTO t_collection(
			id,
			studentid,
			programid,
			addtime,
			edittime,
			slock,
			type,
			create_by,
			create_date,
			update_by,
			update_date,
			remarks,
			del_flag
		) VALUES (
			default,
			#{studentid},
			#{programid},
			#{addtime},
			#{edittime},
			#{slock},
			#{type},
			#{createBy.id},
			#{createDate},
			#{updateBy.id},
			#{updateDate},
			#{remarks},
			#{delFlag}
		)
	</insert>
	
	<update id="update">
		UPDATE t_collection SET 	
			studentid = #{studentid},
			programid = #{programid},
			addtime = #{addtime},
			edittime = #{edittime},
			slock = #{slock},
			type = #{type},
			update_by = #{updateBy.id},
			update_date = #{updateDate},
			remarks = #{remarks}
		WHERE id = #{id}
	</update>
	
	<update id="delete">
		UPDATE t_collection SET 
			del_flag = #{DEL_FLAG_DELETE}
		WHERE id = #{id}
	</update>
	
